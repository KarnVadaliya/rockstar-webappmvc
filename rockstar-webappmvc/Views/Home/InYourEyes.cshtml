@{
    ViewData["Title"] = "In Your Eyes";
}
<head>
    <meta charset="utf-8" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>$(function () {
            $('#btn-all').on('click', function () {
                console.log("getting..");
                $.get(
                    'http://localhost:5001/Music/InYourEyes',
                    function (response) {
                        console.log("> ", response);
                        $("#result").html(response);
                    });
            });
        });</script>
</head>
<body>
    <h1>@ViewData["Title"] Lyrics</h1>
    <br/>
    <div>
        <img src="~/images/InYourEyes.jpeg" alt="" width="400" height="400" />
        <br><br>
        <div style="text-align:center;width:400px">
            <button id="btn-all">Get Lyrics</button>
        </div>
        <br />
        <div>
            <p style="text-align:center;width:400px" id="result">
            </p>
            <div class="smt">
                <p style="text-align:center;width:400px">
                    <small>Writer(s): <i>The Weeknd</i></small>
                </p>
                <br>
            </div>
        </div>
    </div>
</body>

